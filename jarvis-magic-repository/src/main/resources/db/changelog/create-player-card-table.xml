<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Victor" id="create_player_card">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="player_card"/>
            </not>
        </preConditions>
        <createTable tableName="player_card" schemaName="jarvis_magic">
            <column name="id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(100)"/>
            <column name="description" type="varchar(255)"/>
            <column name="cost" type="int"/>
            <column name="life_damage" type="int"/>
            <column name="passive" type="int"/>
            <column name="player_id" type="varchar(36)">
                <constraints foreignKeyName="player_id" nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Victor" id="set_player_card_pk">
        <addPrimaryKey schemaName="jarvis_magic" columnNames="id" constraintName="player_card_pkey" tableName="player_card"/>
    </changeSet>

    <changeSet author="Victor" id="set_player_fk">
        <addForeignKeyConstraint baseTableName="player_card"
                                 baseColumnNames="player_id"
                                 constraintName="fk_player_id"
                                 referencedTableName="player"
                                 referencedColumnNames="id"
                                 baseTableSchemaName="jarvis_magic"
                                 referencedTableSchemaName="jarvis_magic"
        />
    </changeSet>

</databaseChangeLog>